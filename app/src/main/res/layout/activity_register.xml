<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
    
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.RegisterActivity"
            android:background="@color/white">
    
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_delete_sign_filled_foreground"
                app:layout_constraintBottom_toBottomOf="@id/lottieAnimSplash"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2"
                android:onClick="getBackToPrevious"/>
    
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimSplash"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:transitionName="LogoTransition"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loader"/>
        
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_marginTop="80dp"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_no_icon"
                android:transitionName="LogoTransition"
                app:layout_constraintEnd_toEndOf="@id/lottieAnimSplash"
                app:layout_constraintStart_toStartOf="@id/lottieAnimSplash"
                app:layout_constraintTop_toTopOf="parent" />
        
            <TextView
                android:id="@+id/registerDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/logoImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/Auth_Text_description"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="@color/purple_200"
                android:padding="10dp"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:transitionName="anim3"/>
            <LinearLayout
                android:id="@+id/registerCardView"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/registerDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
        
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/registerEmailEditText"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Email"
                    android:layout_marginTop="15dp"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxStrokeColor="@color/purple_200"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_email_black_24dp"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp">
            
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:inputType="textEmailAddress"/>
                </com.google.android.material.textfield.TextInputLayout>
    
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/registerPasswordEditText"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Password"
                    app:boxBackgroundMode="outline"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxStrokeColor="@color/purple_200"
                    app:endIconMode="password_toggle"
                    app:startIconDrawable="@drawable/ic_lock_2"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp">
        
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins" />
    
                </com.google.android.material.textfield.TextInputLayout>
                
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirmPasswordEditText"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Confirm password"
                    app:boxBackgroundMode="outline"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxStrokeColor="@color/purple_200"
                    app:endIconMode="password_toggle"
                    app:startIconDrawable="@drawable/ic_re_enter_pincode_filled"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp">
        
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins" />
    
                </com.google.android.material.textfield.TextInputLayout>
        
              
            </LinearLayout>
        
            <LinearLayout
                android:id="@+id/buttonContinue"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/roundbutton"
                android:elevation="8dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/registerCardView"
                android:transitionName="anim1"
                android:onClick="openVerifyPage">
            
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/register_continue"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_circled_chevron_right_filled_foreground" />
            </LinearLayout>
        
            <View
                android:id="@+id/divider2"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/buttonContinue"
                app:layout_constraintEnd_toEndOf="@id/buttonContinue"
                app:layout_constraintStart_toStartOf="@id/buttonContinue"/>
        
            <View
                android:id="@+id/divider3"
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:background="#00515D"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider2" />
        
            <TextView
                android:id="@+id/textViewEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/or"
                app:layout_constraintBottom_toBottomOf="@id/divider4"
                app:layout_constraintEnd_toStartOf="@id/divider4"
                app:layout_constraintStart_toEndOf="@id/divider3"
                app:layout_constraintTop_toTopOf="@id/divider3" />
        
            <View
                android:id="@+id/divider4"
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_marginEnd="15dp"
                android:background="#00515D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider2" />
            
            <LinearLayout
                android:id="@+id/registerLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewEnd">
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/imageview_bg"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:elevation="8dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_google_foreground"
                        android:elevation="8dp"
                        android:scaleType="fitCenter"/>
                </RelativeLayout>
    
                <RelativeLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/imageview_bg"
                    android:gravity="center"
                    android:elevation="8dp">
        
                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/ic_facebook_circle_gly_foreground"
                        android:elevation="8dp"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/registerLinear" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        
       
    </ScrollView>
    
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
    
    </data>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.VerifyActivity">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/verifyContainer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
    
                <ImageView
                    android:id="@+id/verifyImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/verifyTextView1"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:onClick="getBack"/>
                
                <TextView
                    android:id="@+id/verifyTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/verification"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_semibold"/>
                
            </androidx.constraintlayout.widget.ConstraintLayout>
            
            <TextView
                android:id="@+id/verifyTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/verifyContainer1"
                android:layout_marginTop="50dp"
                android:text="@string/verify_text_2"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="14sp"/>
    
            <com.chaos.view.PinView
                android:id="@+id/firstPinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PinWidget.PinView"
                app:layout_constraintTop_toBottomOf="@id/verifyTextView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="50dp"
                android:cursorVisible="true"
                android:hint="-"
                android:inputType="number"
                android:textColor="@color/purple_200"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cursorColor="@color/purple_200"
                app:cursorWidth="2dp"
                app:hideLineWhenFilled="true"
                app:itemCount="4"
                app:itemHeight="48dp"
                app:itemRadius="20dp"
                app:itemSpacing="10dp"
                app:itemWidth="48dp"
                app:lineWidth="2dp"
                app:lineColor="#7400515D"
                app:viewType="rectangle"/>
    
            <TextView
                android:id="@+id/verifyTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstPinView"
                android:layout_marginTop="50dp"
                android:text="@string/resend_code"
                android:textAlignment="center"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textSize="14sp"/>
    
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/verifyTextView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/roundbutton"
                android:text="@string/verify_code"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:onClick="openPopUp"/>
            
        </androidx.constraintlayout.widget.ConstraintLayout>
    
    </ScrollView>
</layout>